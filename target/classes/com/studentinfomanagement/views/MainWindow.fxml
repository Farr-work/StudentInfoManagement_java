<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane BorderPane.alignment="CENTER" prefHeight="800.0" prefWidth="1400.0" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studentinfomanagement.views.MainWindowController">
   <left>
      <VBox prefWidth="270.0" spacing="5.0" style="-fx-background-color: white; -fx-border-color: #E5E7EB; -fx-border-width: 0 1 0 0;" BorderPane.alignment="CENTER">
         <children>
             
            <HBox alignment="CENTER_LEFT" prefHeight="80.0">
               <children>
                  <Label text="DTP System" textFill="#111827">
                     <font>
                        <Font name="System Bold" size="30.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>

            <VBox spacing="5.0" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets left="15.0" right="15.0" top="10.0" />
               </padding>
               <children>
                  
                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleMenuClick" styleClass="menu-button" text="Trang Chủ" userData="Dashboard">
                     <graphic>
                        <Label styleClass="icon-text" text="&#xE80F;" />
                     </graphic>
                  </Button>

                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleMenuClick" styleClass="menu-button" text="Quản Lý Sinh Viên" userData="Students">
                     <graphic>
                        <Label styleClass="icon-text" text="&#xE77B;" />
                     </graphic>
                  </Button>

                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleMenuClick" styleClass="menu-button" text="Quản Lý Môn Học" userData="Courses">
                     <graphic>
                        <Label styleClass="icon-text" text="&#xE82D;" />
                     </graphic>
                  </Button>

                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleMenuClick" styleClass="menu-button" text="Quản Lý Đăng Ký" userData="Portal">
                     <graphic>
                        <Label styleClass="icon-text" text="&#xE774;" />
                     </graphic>
                  </Button>

                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleMenuClick" styleClass="menu-button" text="Tài Khoản" userData="Settings">
                     <graphic>
                        <Label styleClass="icon-text" text="&#xE713;" />
                     </graphic>
                  </Button>
               </children>
            </VBox>

            <VBox alignment="BOTTOM_CENTER">
               <children>
                  <Separator prefWidth="200.0" />
                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLogout" styleClass="menu-button, logout-button" text="Đăng xuất">
                     <graphic>
                        <Label styleClass="icon-text" text="&#xE7E8;" textFill="#dc2626" />
                     </graphic>
                     <VBox.margin>
                        <Insets bottom="20.0" left="15.0" right="15.0" top="15.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>

         </children>
      </VBox>
   </left>

   <center>
       <StackPane fx:id="mainContent" style="-fx-background-color: #F9FAFB;" BorderPane.alignment="CENTER" />
   </center>

</BorderPane>